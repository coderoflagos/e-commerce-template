          <article class="blog-post">
            <h1 class="blog-post-title" style="font-size: 40px;">{{page.head.title}}</h1>
            <h3 class="blog-post-price">{{page.head.extra.price}}</h3>

            <br><br>
            <div class="col-md-6">
              Size:
              <div class="form-group row">
                <div class="col-xs-2">
                  <select class="form-select mb-3 form-control input-lg" aria-label=".form-select-lg example"
                    style="border: 1px gray; width:198px; height: 45px;">
                    <option selected>Open to check sizes</option>
                    <option value="1" class="form-control">Extra Small</option>
                    <option value="2">Small</option>
                    <option value="3">Medium</option>
                    <option value="4">Large</option>
                    <option value="5">Extra Large</option>
                    <option value="6">2XL</option>
                    <option value="7">3XL</option>
                  </select>
                </div>
              </div>
            </div>
            <br>
            <div class="col-md-6">
              Quantity:
              <div class="form-group row">
                <div class="col-xs-2">

                  <input type="number" class="mb-3 form-control" id="Quantity" name="quantity" value="1" min="1"
                    mm-min="1" mm-stock-max="NaN" step="1" mm-step="1"
                    style="border: 1px gray; width:198px; height: 45px;">
                </div>
              </div>
            </div>
            <br>
            <div class="col-md-6">


              <button class="button" type="button" id="button-addon2" style="border-radius: 5px;">Add to cart
              </button>
            </div>
            <br><br>
            <h6>Share Item:</h6>
            <div class="col-md-6">
              <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-lang="en"
                data-show-count="false">Tweet</a>
              <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
              <br>
            </div>
        </div>
      </div>

