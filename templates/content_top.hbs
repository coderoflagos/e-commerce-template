<!DOCTYPE html>
<html>

<head>
	{{! Use the formatter.title and formatter.description in the head }}
	<title>{{page.head.title}} | {{site.info.title}}</title>
	<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no">
	<meta name='viewport' content='width=device-width, initial-scale=1.0'>
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="HandheldFriendly" content="true">
	{{#if page.head.description}}
	{{! Only render the description if it exists }}
	<meta name="description" content="{{page.head.description}}">
	{{/if}}

	<!--Font-->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="/static/css/style.css" type="text/css">
	<!-- Twitter Bootstrap -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

	<!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
		crossorigin="anonymous"></script>

	<style>
		
	</style>
</head>

<body>

	<script>
		window.onload = function () {
			window.addEventListener('scroll', function (e) {
				if (window.pageYOffset > 100) {
					document.querySelector("header").classList.add('is-scrolling');
				} else {
					document.querySelector("header").classList.remove('is-scrolling');
				}
			});

			const menu_btn = document.querySelector('.hamburger');
			const mobile_menu = document.querySelector('.mobile-nav');

			menu_btn.addEventListener('click', function () {
				menu_btn.classList.toggle('is-active');
				mobile_menu.classList.toggle('is-active');
			});
		}
	</script>

	<header>
		<div class="container">
			<h2 style="font-size: 25px;">
				{{ page.head.extra.firstheader }}
			</h2>
			<nav>
				<a href="/cart"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
			</nav>
			<button class="hamburger">
				<i class="fa fa-thin fa-bars"></i>
			</button>
		</div>
	</header>
	<nav class="mobile-nav">
		<a href="/cart" style="	padding: 5px"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a>
	</nav>
	<main>
		<section class="banner">
			<div class="container">
				<div class="row">

					<div class="col-lg-6">
						<br><br><br><br>
						<h1>
							{{page.head.title}}
						</h1>

						<h3 style="font-size: 20px;">{{page.head.description}}</h3>
						<br>
						<a href="#banner_1">
							<button class="button" style="  scroll-behavior: smooth;">Find out more</button>
						</a>
					</div>

					<div class="col-lg-6" style="text-align: center;">
						<img src="{{page.head.extra.photo-src}}" width="60%">
					</div>

					<a href="#banner_1" style="text-decoration: none;"> <i
							class="fa fa-thin fa-angle-double-down d-flex justify-content-center animate__animated animate__bounce"
							style="font-size: 50px;"></i></a>
				</div>
			</div>

		</section>

	</main>